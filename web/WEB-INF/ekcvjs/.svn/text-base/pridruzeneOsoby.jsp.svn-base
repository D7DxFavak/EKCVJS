<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Pridruzene osoby</title>
    </head>
    <body>
        <a href="ekcvjs?navrhovaneOsoby.jsp">Navrhovan√© osoby</a>
        <a href="ekcvjs?detailyOsoby.jsp">Registrovat novou osobu</a>

        <table id="osobyOrgPrihlasitTable">

            <tr class="header">
                <th>${webProp.nazev("uzivatel_jmeno")}
                </th>
                <th>${webProp.nazev("uzivatel_prijmeni")}
                </th>
                <th>${webProp.nazev("uzivatel_datum_narozeni")}
                </th>
                <th>${webProp.nazev("uzivatel_rodne_cislo")}
                </th>
                <th>${webProp.nazev("tab_detaily")}</th> 
                <th>${webProp.nazev("tab_odebrat")}</th>
            </tr>

            <c:forEach var="osoby" items="${pridruzeneOsoby}" varStatus="iter">

                <tr class="${((iter.index % 2) == 0) ? 'lightBlue' : 'white'}">

                    <td width="130">
                        ${osoby.webOrgOsOsoba.jmeno}               
                    </td>
                    <td width="140">
                        ${osoby.webOrgOsOsoba.prijmeni}                             
                    </td>
                    <td width="150">
                        <fmt:formatDate value="${osoby.webOrgOsOsoba.datumNarozeni}" pattern="d.M.yyyy"/>  
                    </td>
                    <td width="150">
                        ${osoby.webOrgOsOsoba.rodneCislo}  
                    <td>
                        <a href="ekcvjs?detailyOsoby.jsp&detailOsobaId=${osoby.webOrgOsOsoba.osobaId}">${webProp.nazev("uzivatel_detail")} 
                    </td>
                    <td width="130">
                        <form action="odebratZeZamestnancu" method="post">
                            <input type="hidden"
                                   name="osobaId"
                                   id="osobaId"
                                   value="${osoby.webOrgOsOsoba.osobaId}">
                            <input type="submit"
                                   name="submit"
                                   value="${webProp.nazev("odebrat")}">
                        </form>
                    </td>

                </tr>
            </c:forEach>
        </table>

    </body>
</html>
